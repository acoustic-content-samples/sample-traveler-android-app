<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/text_contacts_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:layout_marginStart="@dimen/contact_text_margin"
        android:layout_marginTop="@dimen/contact_text_margin"
        android:layout_marginEnd="@dimen/contact_text_margin"
        android:textStyle="bold"
        android:textSize="@dimen/contact_text_size"/>

    <TextView
        android:id="@+id/text_contacts_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/contact_text_margin"
        android:layout_marginTop="@dimen/contact_text_margin"
        android:layout_marginEnd="@dimen/contact_text_margin"
        android:textSize="@dimen/contact_text_size"/>

</LinearLayout>
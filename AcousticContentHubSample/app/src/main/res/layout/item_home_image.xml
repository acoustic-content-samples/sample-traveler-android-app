<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/image_gallery_home"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:minHeight="@dimen/home_item_image_min_height"
        android:src="@drawable/ic_image_grey_24dp"
        tools:ignore="ContentDescription" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="@dimen/home_item_gallery_title_margin"
        android:layout_centerInParent="true"
        android:background="@drawable/layout_rounded_background_light"  >

        <TextView
            android:id="@+id/title_gallery_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/home_item_gallery_title_text_margin"
            android:textSize="@dimen/home_item_gallery_title_size"
            android:textStyle="bold"
            android:textColor="@color/textColorWhite"
            tools:text="Title" />

        <TextView
            android:id="@+id/text_gallery_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/home_item_gallery_text_size"
            android:layout_marginStart="@dimen/home_item_gallery_title_text_margin"
            android:layout_marginEnd="@dimen/home_item_gallery_title_text_margin"
            android:layout_marginBottom="@dimen/home_item_gallery_title_text_margin"
            android:textColor="@color/textColorWhite"
            tools:text="Subtitle" />
    </LinearLayout>

</RelativeLayout>